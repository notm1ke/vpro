{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es2016",
            "ES2019.String"
        ],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
    },
    "exclude": [
        "./node_modules",
        "./dist",
        "./test",
    ]
}